@using _5051.Models
@model _5051.Models.AttendanceModel

@{
    ViewBag.Title = "Attendance Details";
}

<br />
<div class="row justify-content-center">

    <div class="col-1 "></div>
    <div class="col lightTransparentBox">
        <br />
        <div class="FontSizeLarge text-center">
            <span class="FontSizeLarger FontBold FontColorWhite">
                Attendance Details
            </span>
        </div>
        <br />
    </div>
    <div class="col-1"></div>
</div>

<div class="row">
    <br />
    <br />
</div>

@{
    if (Model == null)
    {
        <div class="row justify-content-center">

            <div class="col-1 "></div>
            <div class="col lightTransparentBox">
                <br />
                <div class="FontSizeLarge text-center FontColorWhite">
                    No Attendance Data
                </div>
                <br />
            </div>
            <div class="col-1"></div>
        </div>
    }

    else
    {
        <div class="row justify-content-center">

            <div class="col-1 "></div>
            <div class="col lightTransparentBox FontSizeMedium text-center FontColorWhite">

                <br />
                <div class="row justify-content-around">
                    <div class="col text-right" id="avatarLevelName">
                        @Html.DisplayNameFor(m => m.In)
                    </div>
                    <div class="col-1">
                        &nbsp;:&nbsp;
                    </div>
                    <div class="col text-left" id="avatarLevelValue">
                        @Html.DisplayFor(m => m.In)
                    </div>
                </div>

                <div class="row justify-content-around">
                    <div class="col text-right" id="tokensName">
                        @Html.DisplayNameFor(m => m.Out)
                    </div>
                    <div class="col-1">
                        &nbsp;:&nbsp;
                    </div>
                    <div class="col text-left" id="tokensValue">
                        @Html.DisplayFor(m => m.Out)
                    </div>
                </div>

                <div class="row justify-content-around">
                    <div class="col text-right" id="tokensName">
                        @Html.DisplayNameFor(m => m.Emotion)
                    </div>
                    <div class="col-1">
                        &nbsp;:&nbsp;
                    </div>
                    <div class="col text-left" id="tokensValue">
                        @Model.Emotion
                        &nbsp;

                        <img src="@Model.EmotionUri" class="EmotionSizeLarge" alt="@Model.Emotion"/>
                    </div>
                </div>

                <br />
                <hr />

                <div class="row justify-content-center">
                    <div class="col-auto text-center DispalyBoxWithMargin">
                        @Html.ActionLink("Cancel", "Read", new { id = Model.StudentId }, new { @class = "btn btn1 btn-light DispalyBoxWithMargin" })
                    </div>

                    <div class="col-auto text-center DispalyBoxWithMargin">
                        @Html.ActionLink("Update", "Update", new { id = Model.StudentId, item=Model.Id }, new { @class = "btn btn1 btn-light DispalyBoxWithMargin" })
                    </div>

                    <div class="col-auto text-center DispalyBoxWithMargin">
                        @Html.ActionLink("Delete", "Delete", new { id = Model.StudentId, item = Model.Id }, new { @class = "btn btn1 btn-light DispalyBoxWithMargin" })
                    </div>
                </div>

            </div>
            <div class="col-1"></div>
        </div>
    }
}

<div class="row">
    <br />
    <br />
</div>
