@model _5051.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
}

<br />

@{
    if (Model == null)
    {
        <div class="col text-center FontSizeLarge">
            <br />
            No valid user given
            <br />
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-1 "></div>
            <div class="col lightTransparentBox">
                <br />
                <div class="FontSizeLarge text-center">
                    <span class="FontSizeLarger FontBold">Change your Password?</span>
                </div>
                <br />
            </div>
            <div class="col-1"></div>
        </div>


        <div class="row">
            <br />
            <br />
        </div>

        <div class="row justify-text-center">
            <div class="col-1"></div>

            <div class="col text-center lightTransparentBox">
                <br />

                <div class="row no-gutters justify-content-center">

                    @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(m => m.UserID)

                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="col">
                            <div class="row justify-content-around">
                                <div class="col-5 text-right FontSizeMedium">
                                    Old Password
                                </div>
                                <div class="col-1"></div>
                                <div class="col">
                                    @Html.TextBoxFor(m => m.OldPassword, new { @class = "input1" })
                                </div>
                                <div class="col-1"></div>
                            </div>

                            <br />
                            <div class="row justify-content-around">
                                <div class="col-5 text-right FontSizeMedium">
                                    New Password
                                </div>
                                <div class="col-1"></div>
                                <div class="col">
                                    @Html.TextBoxFor(m => m.NewPassword, new { @class = "input1" })
                                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-1"></div>
                            </div>

                            <br />
                            <div class="row justify-content-around">
                                <div class="col-5 text-right FontSizeMedium">
                                    Confirm
                                </div>
                                <div class="col-1"></div>
                                <div class="col">
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "input1" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                </div>
                                <div class="col-1"></div>
                            </div>

                            <div class="row justify-content-around">
                                <span><br /></span>
                            </div>

                            <div class="row justify-content-around">
                                <div class="col DispalyBoxWithMargin">
                                    @Html.ActionLink("Cancel", "Settings", "Portal", routeValues: new { id = Model.UserID }, htmlAttributes: new { @class = "btn btn1 btn-light" })
                                </div>
                                <div class="col DispalyBoxWithMargin">
                                    <input id="ChangeButton" type="submit" name="submit" value="Change" class="btn btn1 btn-light" />
                                    <br />
                                    <br />
                                </div>
                            </div>
                        </div>
                    }
                    <br />
                </div>
            </div>

            <div class="col-1"></div>
        </div>
    }
}
