@model _5051.Models.FactoryInventoryModel
@{
    ViewBag.Title = "Delete";
}


<br />
<div class="row justify-content-center">

    <div class="col-1 "></div>
    <div class="col lightTransparentBox">
        <br />
        <div class="FontSizeLarge text-center">
            <span class="FontSizeLarger FontBold FontColorWhite">
                Delete Factory Inventory
            </span>
        </div>
        <br />
    </div>
    <div class="col-1"></div>
</div>

<div class="row">
    <br />
    <br />
</div>


@{
    if (Model == null)
    {
        <div class="row justify-content-center">

            <div class="col-1 "></div>
            <div class="col lightTransparentBox">
                <br />
                <div class="FontSizeLarge text-center FontColorWhite">
                    No FactoryInventory
                </div>
                <br />
            </div>
            <div class="col-1"></div>
        </div>
    }

    else
    {
        <div class="row justify-content-center FontColorWhite">

            <div class="col-1 "></div>
            <div class="col lightTransparentBox">
                <br />
                <div class="FontSizeMedium text-center">
                    <div class="row justify-content-center">
                        <img src="~/Content/shop/@Model.Uri" class="FactoryInventorySize1" />
                    </div>
                    <span id="currentNameDisplayed" class="FontSizeLarge">
                        @Model.Name
                    </span>
                </div>

                    <br />

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.Name)
                        @Html.HiddenFor(m => m.Description)
                        @Html.HiddenFor(m => m.Uri)
                        @Html.HiddenFor(m => m.Tokens)
                        @Html.HiddenFor(m => m.Category)

                        <div class="row justify-content-center">
                            <div class="col-auto justify-content-center text-center DispalyBoxWithMargin">
                                @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn1 btn-light DispalyBoxWithMargin" })
                            </div>

                            <div class="col-1"></div>

                            <div class="col-auto justify-content-center text-center DispalyBoxWithMargin">
                                <input type="submit" value="Delete" class="btn btn1 btn-light DispalyBoxWithMargin">
                            </div>
                        </div>
                    }

                    <br />

                </div>
                <div class="col-1"></div>
            </div>
    }
}
