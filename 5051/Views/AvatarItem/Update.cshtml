@model _5051.Models.AvatarItemModel
@{
    ViewBag.Title = "Update";
}

<br />
<div class="row justify-content-center">

    <div class="col-1 "></div>
    <div class="col lightTransparentBox">
        <br />
        <div class="FontSizeLarge text-center">
            <span class="FontSizeLarger FontBold FontColorWhite">
                Update Avatar Item
            </span>
        </div>
        <br />
    </div>
    <div class="col-1"></div>
</div>

<div class="row">
    <br />
    <br />
</div>


@{
    if (Model == null)
    {
        <div class="row justify-content-center">

            <div class="col-1 "></div>
            <div class="col lightTransparentBox">
                <br />
                <div class="FontSizeLarge text-center FontColorWhite">
                    No Avatar Item
                </div>
                <br />
            </div>
            <div class="col-1"></div>
        </div>
    }
    else
    {
        <div class="row justify-content-around FontColorWhite">

            <div class="col-1 "></div>
            <div class="col lightTransparentBox FontSizeMedium text-center">
                <br />

                <div class="row justify-content-center">
                    <div class="col-auto darkTransparentBox DispalyBoxWithMargin">
                        <br />
                        <div class="row justify-content-center">
                            <img src="~/Content/avatar/@Model.Uri" class="AvatarSize1 lightBox DispalyBoxWithMargin" />
                        </div>

                        <div class="row justify-content-center">
                            <div id="currentNameDisplayed" class="col FontSizeMedium DispalyBoxWithMargin">
                                @Model.Name
                            </div>
                        </div>
                    </div>
                </div>

                <br />


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)


                    <div class="row justify-content-center">
                        <div class="col-6 text-sm-center text-md-right" id="studentName">
                            @Html.DisplayNameFor(m => m.Name)
                        </div>
                        <div class="col-1">
                        </div>
                        <div class="col text-left" id="studentValue">
                            @Html.EditorFor(m => m.Name)
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-6 text-sm-center text-md-right" id="tokensName">
                            @Html.DisplayNameFor(m => m.Description)
                        </div>
                        <div class="col-1">

                        </div>
                        <div class="col text-left" id="tokensValue">
                            @Html.EditorFor(m => m.Description)
                            @Html.ValidationMessageFor(m => m.Description)
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-6 text-sm-center text-md-right" id="xpName">
                            @Html.DisplayNameFor(m => m.Uri)
                        </div>
                        <div class="col-1">

                        </div>
                        <div class="col text-left" id="xpValue">
                            @Html.EditorFor(m => m.Uri)
                            @Html.ValidationMessageFor(m => m.Uri)
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-6 text-sm-center text-md-right" id="xpName">
                            @Html.DisplayNameFor(m => m.Category)
                        </div>
                        <div class="col-1">

                        </div>
                        <div class="col text-left" id="xpValue">
                            @Html.EnumDropDownListFor(m => m.Category)
                            @Html.ValidationMessageFor(m => m.Category)
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-6 text-sm-center text-md-right" id="xpName">
                            @Html.DisplayNameFor(m => m.Tokens)
                        </div>
                        <div class="col-1">

                        </div>
                        <div class="col text-left" id="xpValue">
                            @Html.EditorFor(m => m.Tokens)
                            @Html.ValidationMessageFor(m => m.Tokens)
                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-6 text-sm-center text-md-right" id="xpName">
                            @Html.DisplayNameFor(m => m.Quantities)
                        </div>
                        <div class="col-1">

                        </div>
                        <div class="col text-left" id="xpValue">
                            @Html.EditorFor(m => m.Quantities)
                            @Html.ValidationMessageFor(m => m.Quantities)
                        </div>
                    </div>

                    <br />
                    <hr />
                    <br />

                    <div class="row justify-content-center">
                        <div class="col-auto text-center">
                            @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn1 btn-light DispalyBoxWithMargin" })
                        </div>

                        <div class="col-auto text-center">
                            <input type="submit" value="Update" class="btn btn1 btn-light DispalyBoxWithMargin">
                        </div>

                    </div>
                    <br />
                }

            </div>

            <div class="col-1"></div>

        </div>
        <br />
        <br />
    }
}